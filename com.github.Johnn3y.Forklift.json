{
  "id" : "com.github.Johnn3y.Forklift",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "3.36",
  "sdk" : "org.gnome.Sdk",
  "command" : "Forklift",
  "finish-args" : [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--share=network",
    "--talk-name=org.freedesktop.Notifications",
    "--filesystem=home"
  ],
  "cleanup" : [
    "/include",
    "/lib/pkgconfig"
  ],
  "modules" : [
    {
      "name" : "ffmpeg",
      "config-opts" : [
        "--enable-shared",
        "--disable-static",
        "--disable-doc",
        "--disable-ffplay",
        "--disable-devices",
        "--enable-gnutls",
        "--enable-libvorbis"
      ],
      "sources" : [
        {
          "url" : "https://ffmpeg.org/releases/ffmpeg-4.2.1.tar.xz",
          "sha256" : "cec7c87e9b60d174509e263ac4011b522385fd0775292e1670ecc1180c9bb6d4",
          "type" : "archive"
        }
      ],
      "cleanup" : [
        "/share/ffmpeg"
      ],
      "post-install" : [
        "install -Dm644 COPYING.LGPLv3 /app/share/licenses/ffmpeg/COPYING"
      ]
    },
    {
      "name" : "youtube-dl",
      "buildsystem" : "simple",
      "ensure-writable" : [
        "/lib/python*/site-packages/easy-install.pth"
      ],
      "sources" : [
        {
          "url" : "https://github.com/ytdl-org/youtube-dl",
          "tag" : "2020.03.24",
          "commit" : "049c0486bbd57a9bb5fb5a6a5eeff82fd4ac03ff",
          "type" : "git"
        }
      ],
      "build-commands" : [
        "python3 setup.py build",
        "python3 setup.py install --prefix=/app"
      ]
    },
    {
        "name" : "libdazzle",
        "config-opts" : [
            "--libdir=/app/lib",
            "--buildtype=release"
        ],
        "buildsystem" : "meson",
        "builddir" : true,
        "cleanup" : [
            "/bin"
        ],
        "sources" : [
           {
                "type" : "git",
                "url" : "https://gitlab.gnome.org/GNOME/libdazzle.git",
                "branch" : "3.36.0",
                "commit" : "2f4d35523c61121eac0459e01b1510e46fe7f2c8"
            }
        ]
    },
    {
      "name" : "libhandy",
      "buildsystem" : "meson",
      "config-opts" : [
        "-Dexamples=false",
        "-Dtests=false"
      ],
      "sources" : [
        {
          "url" : "https://source.puri.sm/Librem5/libhandy",
          "branch" : "v0.0.13",
          "commit" : "7a193d7692c9c76a1a94f17c4d30b585f77d177c",
          "type" : "git"
        }
      ]
    },
    {
      "name" : "Forklift",
      "buildsystem" : "meson",
      "sources" : [
        {
          "url" : "https://github.com/Johnn3y/Forklift",
          "branch" : "master",
          "type" : "git"
        }
      ]
    }
  ]
}
